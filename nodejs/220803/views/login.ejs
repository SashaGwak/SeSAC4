    <title>login</title>
    <style>
        form {
            width: 500px;
            padding-top: 50px;
            margin: auto;
        }
        h2 {
            text-align: center;
            margin : 2vw;
        }
        button {
            width: 500px;
            margin: 2px;
        }
        #login_process_box {
            width: 500px;
            height: 30px;
        }
        p {
            color: red;
            text-align: center;
        }
    </style>
</head>
<body>
    <form id="form_info" action="/user/login" method="post" enctype="multipart/form-data">
        <h2>Login</h2>
          <div class="mb-3 row">
            <label for="inputID" class="col-sm-2 col-form-label">ID</label>
            <div class="col-sm-10">
              <input type="text" name="id" class="form-control" id='id_input' required>
            </div>
          </div>
          <div class="mb-3 row">
            <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
              <input type="password" name='pw'class="form-control" id="pw_input" required>
            </div>
          </div>
          <div id="login_process_box"> 
          </div>
          <button class="btn btn-primary">로그인</button>
    </form>
</body>
</html>