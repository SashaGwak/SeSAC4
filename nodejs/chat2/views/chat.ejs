<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Nomalization.css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css" />
    <!-- socket.io -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/3.0.4/socket.io.js"></script>
    <!-- jquery -->
    <script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
    <!-- bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css">
    <title>소켓</title>
    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100vw;
            height: 100vh;
            /* border: 2px solid red; */
        }
        .wrap {
            /* border: 2px solid blue; */
            text-align: center;
        }
        .chat-list {
            width: 500px;
            min-height: 500px;
            height: 100%;
            background-color: lavender;
            padding: 10px;
            margin-bottom: 10px;
            border-radius: 2%;
            box-shadow: 0 10px 10px 0px rgba(0,0,0,0.1);
        }
        .chat-list div div{
            display: inline-block;
            padding: 5px;
            margin-bottom: 10px;
        }
        .my-chat {
            text-align: right;
        }
        .access {
            text-align: center;
        }
        .my-chat div {
            background-color: lavenderblush;
            box-shadow: 0 5px 5px 0px rgba(0,0,0,0.1);
            border-radius: 1%;
        }
        .other-chat div {
            background-color: white;
            box-shadow: 0 5px 5px 0px rgba(0,0,0,0.1);
            border-radius: 1%;
        }
        .other-chat {
            text-align: left;
        }
        #message {
            /* input box */
            width: 80%;
            border: .5px solid #ddd;
            padding: 7px;
            border-radius: 8px;
            margin-right: 5px;
        }
        .input_box {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="wrap">
        <h1>SeSAC Chat!🌱</h1>
        <div id="chat-list" class="chat-list"></div>
            <div class="input_box">
                <input type="text" placeholder="내용을 입력해주세요" id="message" onKeypress="javascript:if(event.keyCode==13){send();}">
                <button type="button" onclick="send();" class="btn btn-light w-auto">전송</button>
            </div>
        <div style="display: none;" id="name"><%=name %></div>
    </div>
    <script>
        var id = '';
        var name = document.getElementById('name').innerText;
        var socket = io.connect();
        socket.on('info', function(data) {id = data;})
        // 아이디 받아줌

        function send(){
            console.log(id);
            let msg = document.getElementById('message').value;
            // 아이디와 메세지, 닉네임 값 보내줌
            socket.emit('send', {id, msg, name});
            document.getElementById('message').value = '';
        }

        socket.on('newMessage', function(data) {
            // data = {id: ~~~. msg: ~~~~ , name : ~~ };
            let chat_list = document.getElementById('chat-list'); 
            let div = document.createElement('div');
            let div_chat = document.createElement('div');

            div_chat.textContent = data.name +' : '+data.msg; // 박스 안에 닉네임 : 메세지 넣어줌 

            // data.id 메세지 보낸 사람 아이디, id 내 아이디 
            if (data.id == id) {
                div.classList.add('my-chat');
            } else {
                div.classList.add('other-chat')
            }
            
            div.appendChild(div_chat); // append로 챗박스안에 자식요소로 넣어줌
            chat_list.appendChild(div); // append로 챗박스안에 자식요소로 넣어줌
        })

        // 닉네임 보내기 
        socket.emit('name', name); 


        socket.on('notice', function(data) {
            // data = {name:name , msg:'님이 입장or 퇴장하셨습니다.'}
            let chat_list = document.getElementById('chat-list'); 
            let div = document.createElement('div');
            div.textContent = data.name + data.msg;

            div.classList.add('access')
            chat_list.appendChild(div);
        })
    </script>
</body>
</html>

